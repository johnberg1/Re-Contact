            app:layout_constraintHorizontal_bias="0.037"
            app:layout_constraintLeft_toLeftOf="@+id/textView22"
            app:layout_constraintRight_toRightOf="@+id/textView22"
            app:layout_constraintTop_toTopOf="@+id/textView20"
            app:layout_constraintVertical_bias="0.572"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="399dp"
            android:layout_height="17dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:text="Phone Number:"
            app:layout_constraintBottom_toTopOf="@+id/textView23"
            app:layout_constraintHorizontal_bias="0.205"
            app:layout_constraintLeft_toLeftOf="@+id/textView23"
            app:layout_constraintRight_toRightOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/DisplayAge"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="373dp"
            android:layout_height="18dp"
