            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Job:"
            app:layout_constraintBottom_toTopOf="@+id/textView24"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/textView24"
            app:layout_constraintRight_toRightOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/DisplayAge"
            app:layout_constraintVertical_bias="0.595"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="373dp"
            android:layout_height="19dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:text="Email:"
            app:layout_constraintBottom_toBottomOf="@+id/textView25"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/textView25"
            app:layout_constraintRight_toRightOf="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/DisplayPhoneNum"
            app:layout_constraintVertical_bias="0.55"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="371dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:text="Hobbies:"
            app:layout_constraintBottom_toBottomOf="@+id/textView26"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintLeft_toLeftOf="@+id/textView26"
            app:layout_constraintRight_toRightOf="@+id/textView26"
            app:layout_constraintTop_toBottomOf="@+id/DisplayJob"
            app:layout_constraintVertical_bias="0.524"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="364dp"
            android:layout_height="17dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
